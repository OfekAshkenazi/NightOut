<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="120dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/addressTV_placeAdapter"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/nameTV_placeAdapter"
            android:hint="HaBarzel, Tel Aviv, Israel"
            android:textSize="8sp"
            android:paddingStart="5dp"/>

        <TextView
            android:id="@+id/nameTV_placeAdapter"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/placeThumb_placeAdapter"
            android:text="The Warehouse"
            android:textSize="10sp"
            android:paddingStart="5dp"
            android:maxLines="1"/>
        <ImageView
            android:id="@+id/placeThumb_placeAdapter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher" />

        <com.github.ivbaranov.mfb.MaterialFavoriteButton
            android:id="@+id/imageButton"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="center"
            app:mfb_size="1"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/placeThumb_placeAdapter"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>